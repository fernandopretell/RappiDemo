<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/nsContainer"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".presentation.MainActivity"
    tools:showIn="@layout/activity_main">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/contaninerMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">
            <com.fernandopretell.componentes.carousel.Carousel
                android:id="@+id/carousel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:carousel_layout_recycler="linear"/>
            <com.fernandopretell.componentes.carousel.Carousel
                android:id="@+id/carousel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:carousel_layout_recycler="linear"/>
            <com.fernandopretell.componentes.carousel.Carousel
                android:id="@+id/carousel3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:carousel_layout_recycler="linear"/>
        </LinearLayout>
        <ProgressBar
            android:id="@+id/pbMain"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </FrameLayout>





</androidx.core.widget.NestedScrollView>
