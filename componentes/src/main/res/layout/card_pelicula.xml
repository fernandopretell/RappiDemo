<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view_="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardContainer"
    android:layout_width="@dimen/card_default_width"
    android:layout_height="@dimen/card_default_height"
    android:layout_marginTop="@dimen/card_default_margin"
    android:layout_marginEnd="@dimen/card_default_margin"
    android:layout_marginStart="@dimen/card_default_margin"
    app:cardCornerRadius="4dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            style="@style/Card.Image"
            android:id="@+id/ivBackdrop_path"
            android:contentDescription="@string/imagen_pelicula" />
    </FrameLayout>

</androidx.cardview.widget.CardView>
