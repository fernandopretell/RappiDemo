<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bannerContainer"
    android:layout_width="@dimen/banner_default_width"
    android:layout_height="@dimen/banner_default_height"
    android:layout_marginTop="@dimen/card_default_margin"
    android:layout_marginEnd="@dimen/card_default_margin"
    android:layout_marginStart="@dimen/card_default_margin">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            style="@style/Banner.Image"
            android:id="@+id/bannerImage"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorOscuro"
            android:alpha="0.80"
            android:contentDescription="@string/sombreado"/>
        <TextView
            android:id="@+id/tvTituloBanner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/lato_black_italic"
            android:text="@string/banner_label"
            android:textSize="28sp"/>

    </FrameLayout>

</androidx.cardview.widget.CardView>
